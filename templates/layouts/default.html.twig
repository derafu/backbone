{# layouts/default.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Derafu: Backbone - The Architectural Spine for PHP Libraries{% endblock %}

{% block body %}
    {% block header %}
        {% include 'components/header.html.twig' %}
    {% endblock %}

    {% block main %}
        <div class="container">
            <div class="row">
                <main class="col-md-9">
                    {% block content %}{% endblock %}
                </main>
                <div class="col-md-3 py-4">
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Package Info</div>
                                <span class="smal text-muted">
                                    <a href="https://github.com/derafu/backbone" target="_blank" class="link-secondary text-decoration-none">
                                        <i class="fa-brands fa-github"></i>
                                        derafu/backbone
                                    </a>
                                </span>
                                <div class="my-2">
                                    <img src="https://img.shields.io/github/stars/derafu/backbone" alt="GitHub Repo stars">
                                    <img src="https://img.shields.io/github/forks/derafu/backbone" alt="GitHub forks">
                                </div>
                            </div>
                        </li>
                        <a href="/" class="list-group-item list-group-item-action {% if request.uri.path == '/' %}active{% endif %}">
                            README
                        </a>
                    </div>
                    <div class="list-group mb-4">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                            <div class="fw-bold">Docs</div>
                            <span class="smal text-muted">Guides & Examples</span>
                            </div>
                        </li>
                        <a href="/architecture" class="list-group-item list-group-item-action {% if request.uri.path == '/architecture' %}active{% endif %}">
                            Architecture
                        </a>
                        <a href="/relationships" class="list-group-item list-group-item-action {% if request.uri.path == '/relationships' %}active{% endif %}">
                            Relationships
                        </a>
                        <a href="/workflow" class="list-group-item list-group-item-action {% if request.uri.path == '/workflow' %}active{% endif %}">
                            Workflow
                        </a>
                        <a href="/decision-flow" class="list-group-item list-group-item-action {% if request.uri.path == '/decision-flow' %}active{% endif %}">
                            Decision Flow
                        </a>
                        <a href="/component-interaction" class="list-group-item list-group-item-action {% if request.uri.path == '/component-interaction' %}active{% endif %}">
                            Component Interaction
                        </a>
                        <a href="/configuration-layers" class="list-group-item list-group-item-action {% if request.uri.path == '/configuration-layers' %}active{% endif %}">
                            Configuration Layers
                        </a>
                        <a href="/service-lifecycle" class="list-group-item list-group-item-action {% if request.uri.path == '/service-lifecycle' %}active{% endif %}">
                            Service Lifecycle
                        </a>
                        <a href="/design-patterns" class="list-group-item list-group-item-action {% if request.uri.path == '/design-patterns' %}active{% endif %}">
                            Design Patterns
                        </a>
                        <a href="/file-structure" class="list-group-item list-group-item-action {% if request.uri.path == '/file-structure' %}active{% endif %}">
                            File Structure
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {% include 'components/footer.html.twig' %}
    {% endblock %}
{% endblock %}
